<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="fecuadorPersistence_" transaction-type="RESOURCE_LOCAL">
        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
        <class>net.fecuador.persist.model.entities.AuditoriaEntity</class>
        <class>net.fecuador.persist.model.entities.DetalleAuditoriaEntity</class>
        <class>net.fecuador.persist.model.entities.DetalleRetencionEntity</class>
        <class>net.fecuador.persist.model.entities.EmpresaEntity</class>
        <class>net.fecuador.persist.model.entities.FacturaEntity</class>
        <class>net.fecuador.persist.model.entities.GuiaRemisionEntity</class>
        <class>net.fecuador.persist.model.entities.NotaCreditoEntity</class>
        <class>net.fecuador.persist.model.entities.NotaDebitoEntity</class>
        <class>net.fecuador.persist.model.entities.PerfilEntity</class>
        <class>net.fecuador.persist.model.entities.RetencionEntity</class>
        <class>net.fecuador.persist.model.entities.TipoEntity</class>
        <class>net.fecuador.persist.model.entities.UsuarioEntity</class>
        <properties>
            <property name="openjpa.RuntimeUnenhancedClasses" value="supported"/>
            <property name="openjpa.jdbc.SchemaFactory" value="native(ForeignKeys=true)"/>
            <property name="openjpa.jdbc.MappingDefaults" value="ForeignKeyDeleteAction=restrict, JoinForeignKeyDeleteAction=restrict"/>
            <property name="openjpa.Compatibility" value="CheckDatabaseForCascadePersistToDetachedEntity=true"/>
            <property name="openjpa.jdbc.DBDictionary" value="sqlserver(UniqueIdentifierAsVarbinary=false)"/>
            <property name="openjpa.Multithreaded" value="false"/>
            <property name="openjpa.Optimistic" value="false"/>
            <property name="openjpa.TransactionMode" value="local"/>
            <property name="openjpa.ConnectionFactoryMode" value="local"/>
            <property name="openjpa.LockManager" value="none"/>
            <property name="openjpa.Log" value="DefaultLevel=ERROR, Runtime=ERROR, Tool=ERROR, SQL=ERROR"/>
        </properties>
    </persistence-unit>
</persistence>